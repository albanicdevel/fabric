{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,                
    "outDir": "./dist",             
    "rootDir": "./package",         
    "declaration": true,            
    "declarationMap": true,         
    "sourceMap": true,
    "lib": ["ES2020", "DOM"]              
  },
  "include": ["package/**/*"]       
}
